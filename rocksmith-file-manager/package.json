{
  "name": "rocksmith-file-manager",
  "version": "1.0.0",
  "description": "A web application to manage and track Rocksmith custom song files",
  "main": "dist/scripts/app.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "serve": "http-server -p 8080 -c-1",
    "start": "npm run build && npm run serve",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "rocksmith",
    "file-manager",
    "music",
    "guitar"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
